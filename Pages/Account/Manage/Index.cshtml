@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<section class="login-form section-form profile">
<h3 class="main-title">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row justify-content-center align-items-center">
    <div class="col-md-4">
            <form id="profile-form" method="post" class="login-form  register-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mt-2 mx-auto">
                <input asp-for="Username" class="form-control moved-label" disabled />
                    <label asp-for="Username" class="form-label login-label" style="top: -30px; font-size: 16px; color: rgb(17, 17, 17);"></label>
            </div>
                <div class="form-floating mt-5 mb-5 mx-auto">
                <input asp-for="Input.PhoneNumber" class="form-control moved-label" />
                    <label asp-for="Input.PhoneNumber" class="form-label login-label" style="top: -30px; font-size: 16px; color: rgb(17, 17, 17);"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            @*<button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>*@
            <button id="update-profile-button" type="submit" class="w-75 btn btn-lg custom-button">Save</button>
        </form>
    </div>
</div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
