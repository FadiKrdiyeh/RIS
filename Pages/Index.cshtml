@page
@using Ris2022.Pages.Account
@model LoginIModel

@{
    ViewData["Title"] = Resource.Home;
    Layout = "_LoginLayout";
}


<section class="section-form login-form" id="contact">
    <h2 class="login-main-title">@Resources.Resource.LogIn</h2>
    <div class="row justify-content-center align-items-center">
        <div class="col-md-4">
            <section>
                <form id="account" method="post" class="login-form">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mt-5">
                        <div class="icons-container">
                            <i class="fa fa-user login-icons"></i>
                        </div>
                        <input asp-for="Input.UserName" class="form-control moved-label" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.UserName" class="form-label login-label"></label>
                        <span asp-validation-for="Input.UserName" class="text-danger text-start"></span>
                    </div>
                    <div class="form-floating mt-5">
                        <div class="icons-container">
                            <i class="fa fa-lock login-icons"></i>
                        </div>
                        <input asp-for="Input.Password" class="form-control moved-label" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label login-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger text-start"></span>
                    </div>
                    <div class="form-floating mt-5 mb-5">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label checkbox-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-floating mt-3">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg custom-button">@Resource.LogIn</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
