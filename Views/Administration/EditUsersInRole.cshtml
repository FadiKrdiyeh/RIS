@model List<UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
    var roleName = ViewBag.RoleName;
}

<script>
    let activeLink = document.querySelector(".scrollmenu .custom-nav-item#listRolesLink");
    activeLink.classList.add("active");
</script>

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2 class="main-title custom-card-header-title">Add or Remove Users from role (@roleName)</h2>
        </div>
    </div>
    <div class="card-body">
        <div class="row justify-content-start text-start">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="col-sm-3 mb-4">
                    <div class="checkbox">
                        <label asp-for="@Model[i].IsSelected" class="custom-checkbox">
                            <input type="hidden" asp-for="@Model[i].UserId" class="form-check-input" />
                            <input type="hidden" asp-for="@Model[i].UserName" class="form-check-input" />
                            <input asp-for="@Model[i].IsSelected" type="checkbox" />
                            <span class="input-check"></span>
                            @Model[i].UserName
                        </label>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="card-footer">
        @*<input type="submit" value="Update" class="btn btn-primary" style="width:auto" />*@
        <button type="submit" value="Update" class="btn create-btn mx-2 py-2">Update <i class="fa fa-edit"></i></button> |
        <a asp-action="EditRole" asp-route-id="@roleId" class="btn back-btn mx-2 py-2">Cancel</a>

    </div>
</form>