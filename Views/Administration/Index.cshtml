@page
@using Ris2022.Data.ViewModel
@model CreateRoleViewModel

@{
    ViewData["Title"] = Resource.AddRole;
    Layout = "_Layout";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="roleForm" method="post">
            <h2>@Resources.Resource.AddRole</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="RoleName" class="form-control" aria-required="true" />
                <label asp-for="RoleName"></label>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
           
            <button id="roleSubmit" type="submit" class="w-100 btn btn-lg btn-primary">@Resource.AddRole</button>
        </form>
    </div>
    
</div>
