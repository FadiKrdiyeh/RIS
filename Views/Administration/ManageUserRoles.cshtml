@model List<UserRolesViewModel>

@{
    var userId = ViewBag.UserId;
    var userName = ViewBag.UserName;
    ViewBag.Title = "Manage User Roles";
}

<script>
    let activeLink = document.querySelector(".scrollmenu .custom-nav-item#listUsersLink");
    activeLink.classList.add("active");
</script>

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2 class="main-title custom-card-header-title">Manage Roles For @userName</h2>
        </div>
        <div class="card-body">
            <div class="row justify-content-start text-start">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="col-sm-3 mb-4">
                        <div class="checkbox">
                            <label asp-for="@Model[i].IsSelected" class="custom-checkbox">
                                <input asp-for="@Model[i].RoleId" type="hidden" />
                                <input asp-for="@Model[i].RoleName" type="hidden" />
                                <input asp-for="@Model[i].IsSelected" type="checkbox" />
                                <span class="input-check"></span>
                                @Model[i].RoleName
                            </label>
                        </div>
                    </div>
                }
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn create-btn px-2 mx-2">Update <i class="fa fa-edit"></i></button> | 
            <a asp-action="EditUser" asp-route-id="@userId" class="btn back-btn px-2 mx-2">Cancel</a>
        </div>
    </div>
</form>