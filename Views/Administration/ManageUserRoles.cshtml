@model List<UserRolesViewModel>

@{
    var userId = ViewBag.UserId;
    var userName = ViewBag.UserName;
    ViewBag.Title = "Manage User Roles";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2 class="main-title custom-card-header-title">Manage Roles For @userName</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                    <div class="form-check m-1">
                        <input asp-for="@Model[i].RoleId" type="hidden" />
                        <input asp-for="@Model[i].RoleName" type="hidden" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].RoleName</label>
                    </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="EditUser" asp-route-id="@userId" class="btn btn-outline-primary">Cancel</a>
        </div>
    </div>
</form>