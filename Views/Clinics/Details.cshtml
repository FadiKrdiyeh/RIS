@model Ris2022.Data.Models.Clinic
@inject IAuthorizationService authorizationService

@{
    ViewData["Title"] = @Resource.Details + ' ' + @Resource.OneClinic;
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<script>
    let activeLink = document.querySelector(".scrollmenu .custom-nav-item#clinicLink");
    activeLink.classList.add("active");
</script>

<h1 class="main-title">@Resource.Details</h1>

<div class="show-details">
    <h4>@Resource.OneClinic</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Namear)
        </dt>
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.Namear)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nameen)
        </dt>
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.Nameen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.Cost)
        </dd>
    </dl>
</div>
<div class="mt-5">
    @if ((await authorizationService.AuthorizeAsync(User, "EditClinicsPolicy")).Succeeded)
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn edit-btn mx-2">@Resource.Edit <i class="fa fa-edit"></i></a><span> | </span>
    }
    <a asp-action="Index" class="btn back-btn mx-2 py-2">@Resource.BackToList <i class="fa fa-hand-o-right"></i></a>
</div>
