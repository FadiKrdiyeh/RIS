@model Ris2022.Data.Models.Modality

@{
    ViewData["Title"] = "Edit Modality";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<script>
    let activeLink = document.querySelector(".scrollmenu .custom-nav-item#modalityLink");
    activeLink.classList.add("active");
</script>

<h1 class="main-title">Edit Modality</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit" class="create-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aetitle" class="control-label"></label>
                <input asp-for="Aetitle" class="form-control" />
                <span asp-validation-for="Aetitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ipaddress" class="control-label"></label>
                <input asp-for="Ipaddress" class="form-control" />
                <span asp-validation-for="Ipaddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Port" class="control-label"></label>
                <input asp-for="Port" class="form-control" />
                <span asp-validation-for="Port" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modalitytypeid" class="control-label"></label>
                <select asp-for="Modalitytypeid" class="form-control" asp-items="ViewBag.Modalitytypeid"></select>
                <span asp-validation-for="Modalitytypeid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Departmentid" class="control-label"></label>
                <select asp-for="Departmentid" class="form-control" asp-items="ViewBag.Departmentid"></select>
                <span asp-validation-for="Departmentid" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<input type="submit" value="Save" class="btn create-btn" />*@
                <button type="submit" value="Save" class="btn create-btn">Save <i class="fa fa-edit"></i></button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn back-btn">Back to List <i class="fa fa-hand-o-right"></i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
